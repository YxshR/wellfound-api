# Production Server Configuration
PORT=5000
NODE_ENV=production

# Database Configuration - MongoDB Atlas
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/project-task-management?retryWrites=true&w=majority

# AI Configuration
GEMINI_API_KEY=your_production_gemini_api_key_here

# CORS Configuration - Update with your production frontend URL
FRONTEND_URL=https://your-frontend-domain.vercel.app

# Rate Limiting - More restrictive for production
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=50

# Security
TRUST_PROXY=true